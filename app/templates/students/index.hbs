<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#each model as |post|}}
        <div class="post-preview">
          {{#link-to 'teachers.posts' post.id}}
            <h2 class="post-title">{{post.title}}</h2>
            {{#if post.subtitle}}
              <h3 class="post-subtitle">{{post.subtitle}}</h3>
            {{/if}}
          {{/link-to}}
          <p class="post-meta">Posted by <a href="#">{{post.authorFullName}}</a> on September 24, 2014</p>
        </div>
        <hr>
      {{/each}}
    </div>
  </div>
</div>
