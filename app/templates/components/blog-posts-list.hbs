<div class="post-preview">
  {{#link-to 'posts' post.id}}
    <h2 class="post-title">{{post.title}}</h2>
    {{#if post.subtitle}}
      <h3 class="post-subtitle">{{post.subtitle}}</h3>
    {{/if}}
  {{/link-to}}
  <p class="post-meta">Posted by <a href="#">{{post.author.fullName}}</a> on {{moment-format post.createdAt 'MMMM DD, YYYY'}}</p>
</div>
<hr>
