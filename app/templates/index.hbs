<header class="intro-header" style="background-image: url('/images/home-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>SMHW Blog</h1>
          <hr class="small">
          <span class="subheading">Choose a section</span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      {{#power-select
        selected=blogType
        options=blogTypes
        onchange=(action (mut blogType))
        placeholder='Select a blog type'
        as |blogType|}}
          {{blogType}}
      {{/power-select}}
    </div>
  </div>
</div>
